@using HMS.Models.EntityModels;
@using HMS.Models.ViewModels;
@model IEnumerable<Department>

<section class="content">
    <div class="container-fluid" style="width: 400px;">
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </h3>

                <div class="card-tools">
                   <form asp-action="Index">
                    <div class="input-group input-group-sm" >
                        <input type="text" name="search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                   </form>
                </div>
            </div>
            <!-- /.card-header -->
                    <div class="card-body table-responsive p-0" >
                        <table class="table table-hover text-nowrap" >
                    <thead>
                        <tr>
                                    <th>Id</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>Action</th>
                                    
                        </tr>
                    </thead>
                    <tbody>

                                @foreach (var item in Model)
                                {
                                  <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <div>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                            @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> *@
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                        </div>
                                    </td>

                            
                                </tr>  

                                }

                        
                        
                    </tbody>
                </table>

                        @{
                            Pagination p = ViewBag.Pagination;
                        }
         <ul class="pagination">
            <li class="paginate_button page-item first"><a tabindex="0" asp-controller="Department" asp-route-page="1" class="page-link">First</a></li>
                            <li class="paginate_button page-item previous"><a tabindex="0" asp-controller="Department" asp-route-page="@p.PreviousPage" class="page-link">Previous</a></li>
                            <li class="paginate_button page-item next"><a tabindex="0" asp-controller="Department" asp-route-page="@p.NextPage" class="page-link">Next</a></li>
                            <li class="paginate_button page-item last"><a tabindex="0" asp-controller="Department" asp-route-page="@p.LastPage" class="page-link">Last</a></li>
         </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    </div>
</div>
</section>